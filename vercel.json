{
    "version": 2,
    "outputDirectory": "public",
    "rewrites": [
        {
            "source": "/(api|sanctum|login|register|logout|dashboard|up|storage)/:path*",
            "destination": "https://ai-nursing-tutor.onrender.com/$1/:path*"
        },
        {
            "source": "/(robots.txt|favicon.ico)",
            "destination": "https://ai-nursing-tutor.onrender.com/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}
